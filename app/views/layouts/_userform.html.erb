<div class="hitokoto">
      <span class="hitokoto-circle1">会</span><span class="hitokoto-circle2">情</span>
      <table class='table'>
        <div class="user-edit-image">
                  <%= attachment_image_tag user, :profile_image, class: "img-round",fallback: "girl.jpg",size: "100x100" %>
                </div>
        <tr>
          <th>お名前</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>ひとこと</th>
          <td><%= simple_format(user.introduction) %></td>
        </tr>
      </table>
      <div class="btn-wrap">
        <%= link_to "編集する" ,edit_user_path(user), class: "btn btn-border-shadow" %><br><br>
        </div>
    </div>