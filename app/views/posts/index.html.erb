  <br><br><br>
  <div class="container">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="col-xs-3">
        <%= render :partial => 'layouts/userform', :locals => {:user => @user}%>
        <%= render :partial => 'layouts/form', :locals => {:post => @post}%>
      </div>
      <div class="col-xs-9">
        <div class="box15">
          <h1>投稿された夢</h1>
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th>どんな夢？</th>
                <th>何をしたの？</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
              <tr>
                <td><%= link_to post.title, post %></td>
                <td><%= post.body %></td>
              </tr>
              <% end %>
            </tbody>
          </table><br>
        </div>
      </div>
    </div>
  </div>